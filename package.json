{
  "name": "liquify",
  "version": "0.0.0-development",
  "description": "Liquid Language Support and IDE tooling",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com",
    "url": "https://liquify.dev"
  },
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": "14",
    "vscode": "^1.50.0",
    "pnpm": ">=5"
  },
  "scripts": {
    "dev": "pnpm dev -r --stream  --filter ./packages/ --no-sort --workspace-concurrency Infinity",
    "build": "pnpm build -r --stream --filter !./web/  --workspace-concurrency Infinity",
    "utils": "pnpm build -r --stream --filter ./utils/  --workspace-concurrency Infinity",
    "semantic-release": "semantic-release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "npx only-allow pnpm"
  },
  "husky": {
    "hooks": {
      "post-merge": "pnpm run push"
    }
  },
  "repository": {
    "url": "https://github.com/panoply/liquify"
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/tsconfig": "workspace:*",
    "esbuild": "^0.14.25",
    "eslint": "^8.11.0",
    "prettier": "^2.5.1",
    "rollup": "^2.70.0",
    "typescript": "^4.6.2"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "peerDependencyRules": {
    "allowedVersions": {
      "eslint": "*"
    }
  }
}
