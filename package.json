{
  "name": "liquify",
  "version": "0.0.0-development",
  "description": "Liquid Templating Language Support and IDE tooling",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": "14",
    "vscode": "^1.50.0",
    "pnpm": ">=5"
  },
  "scripts": {
    "dev": "pnpm dev -r --stream  --filter ./packages/ --no-sort --workspace-concurrency Infinity",
    "build": "pnpm build -r --stream --filter !./web/  --workspace-concurrency Infinity",
    "semantic-release": "semantic-release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "npx only-allow pnpm"
  },
  "husky": {
    "hooks": {
      "post-merge": "pnpm run push"
    }
  },
  "repository": {
    "url": "https://github.com/panoply/liquify"
  },
  "devDependencies": {
    "chalk": "^4.1.1",
    "eslint-config-prettier": "^8.3.0",
    "fs-extra": "^10.0.0",
    "husky": "^6.0.0",
    "inquirer": "^8.1.0",
    "prettier": "^2.3.1",
    "prettier-eslint": "^12.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
