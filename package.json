{
  "name": "liquify",
  "version": "0.0.0-development",
  "description": "Liquid Language Support and editor IDE tooling",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com",
    "url": "https://liquify.dev"
  },
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": "16",
    "vscode": "^1.6.0",
    "pnpm": ">=7"
  },
  "scripts": {
    "dev": "conc --restart-tries 2 -n \"AVA,PRETTIFY,SPECS,PARSER,VSCODE,SERVER\" -c \"#81D4FA,#FF69B,#9370DB,#1E90FF,#00CED1,#FF7F50\" \"pnpm ava dev\" \"pnpm prettify dev\" \"pnpm specs dev\" \"pnpm parser dev\" \"pnpm vscode dev\" \"pnpm lsp dev\"",
    "build": "pnpm -r run build",
    "lsp": "pnpm run -F @liquify/liquid-language-server",
    "ava": "pnpm -r run -F @liquify/ava",
    "prettify": "pnpm run -F @liquify/prettify",
    "parser": "pnpm run -F @liquify/liquid-parser",
    "schema": "pnpm run -F @liquify/schema",
    "specs": "pnpm run -F @liquify/liquid-language-specs",
    "moloko": "pnpm run -F @liquify/moloko",
    "vscode": "pnpm run -F vscode-liquid",
    "docs": "pnpm run -F @liquify/docs",
    "ci:publish": "pnpm publish -r",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run build"
  },
  "husky": {
    "hooks": {
      "post-merge": "pnpm run push"
    }
  },
  "repository": {
    "url": "https://github.com/panoply/liquify"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/release": "workspace:^0.1.0",
    "@liquify/tsconfig": "workspace:*",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "prettier": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "peerDependencyRules": {
    "allowedVersions": {
      "eslint": "*"
    }
  }
}
