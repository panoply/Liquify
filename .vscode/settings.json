{
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/package/node_modules": false,
    "**/versions": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.pnpm-debug.log": true
  },
  "files.associations": {
    ".meta": "json",
    ".packages": "json",
    "*.sublime-settings": "jsonc",
    "*.sublime-commands": "jsonc"
  },
  "editor.semanticHighlighting.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 96,
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "none",
  "editor.renderIndentGuides": true,
  "editor.codeActionsOnSave": {
    "source.deleteSemicolons": true,
    "source.fixAll.eslint": true
  },
  "highlight.regexes": {
    "\\b(ScanState|TokenType|Characters)\\b\\.": {
      "regexFlags": "g",
      "filterLanguageRegex": "javascript",
      "filterFileRegex": ".*\\.js",
      "decorations": [
        {
          "color": "#81D4FA"
        }
      ]
    },
    "(\\$)\\b(seperator|filters|parameters|attributes)": {
      "regexFlags": "g",
      "filterLanguageRegex": "json",
      "filterFileRegex": ".*\\.json",
      "decorations": [
        {
          "color": "#888888"
          //"fontStyle": "italic"
        },
        {
          "color": "#888888"
          //"fontStyle": "italic"
        }
      ]
    },
    "(\"|\\||)([{(]|)(\\$)\\b([A-Za-z]*)\\b([)}]{0,}|)(\\?|)": {
      "regexFlags": "g",
      "filterLanguageRegex": "json",
      "filterFileRegex": ".*\\.json",
      "decorations": [
        {},
        {
          "color": "#3af59e"
        },
        {
          "color": "#81D4FA"
        },
        {
          "color": "#fd557f"
        },
        {
          "color": "#3af59e"
        },
        {
          "color": "#3af59e"
        }
      ]
    },
    "\"?([\\|+-])[{}]?(?=\\$)": {
      "regexFlags": "g",
      "filterLanguageRegex": "json",
      "filterFileRegex": ".*\\.json",
      "decorations": [
        {
          "color": "#ff9408",
          "border": "5px"
        }
      ]
    }
  },
  "javascript.suggest.enabled": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.autoImports": false,
  "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": ["html", "javascript"],
  "prettier.useEditorConfig": true,
  "prettier.requireConfig": false,
  "vsicons.associations.files": [
    {
      "icon": "eslint2",
      "extensions": ["eslint.rules.js"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "vscode",
      "extensions": [
        "extensions.json",
        "settings.json",
        "liquify.code-workspace"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "package",
      "extensions": [".packages.json"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "config",
      "extensions": [
        ".lightserverrc",
        "argv.config.json",
        "build.config.json",
        "build.grammar.json",
        "package.config.json",
        ".pkgrc",
        "liquify.config.json",
        "pkg.config.js"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "babel2",
      "extensions": [".babelrc", "babel.config.json"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "liquid",
      "extensions": [
        ".liquidrc",
        ".liquidrc.json",
        ".liquifyrc",
        ".liquifyrc.json"
      ],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "netlify",
      "extensions": ["_redirects", "_headers"],
      "filename": true,
      "format": "svg"
    }
  ],
  "cSpell.enableFiletypes": ["javascript"],
  "cSpell.words": [
    "argsize",
    "bendcomment",
    "endfor",
    "filesize",
    "freemium",
    "iast",
    "iife",
    "jsonminify",
    "mailchimp",
    "mergerino",
    "multirepo",
    "noderesolve",
    "pluginutils",
    "siema",
    "stickybits",
    "striplit",
    "stripliteral",
    "turbolinks"
  ],
  "cSpell.ignoreWords": [
    "camelcase",
    "codium",
    "endunless",
    "harttle",
    "linebreak",
    "liquidjs",
    "mvasilkov",
    "outdent",
    "repath",
    "vs",
    "νικολας",
    "σαββιδης"
  ]
}
