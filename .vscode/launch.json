{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "${execPath}",
      "outFiles": [
        "${workspaceRoot}/packages/clients/vscode/package/extension.js"
      ],
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/packages/clients/vscode/package",
        "${workspaceRoot}/tests"
      ]
    },
    {
      "name": "Server",
      "type": "node",
      "request": "attach",
      "port": 6007,
      "protocol": "inspector",
      "restart": true,
      "outFiles": ["${workspaceRoot}/packages/server/package/server.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Client", "Server"]
    }
  ]
}
