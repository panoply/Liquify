{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "${execPath}",
      "outFiles": [
        "${workspaceRoot}/packages/clients/vscode/index.js",
        "${workspaceRoot}/packages/clients/vscode/index.js.map"
      ],
      "args": [
        //"--disable-extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/packages/clients/vscode/",
        "${workspaceRoot}/tests"
      ]
    },
    {
      "name": "Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "protocol": "inspector",
      "restart": true,
      "outFiles": [
        "${workspaceRoot}/export/vscode/server/index.js",
        "${workspaceRoot}/export/vscode/server/index.js.map"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Client", "Server"]
    }
  ]
}
