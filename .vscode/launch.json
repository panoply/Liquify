{
  "version": "0.2.0",
  "configurations": [
    /* -------------------------------------------- */
    /* MAIN                                         */
    /* -------------------------------------------- */

    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "${execPath}",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/packages/clients/vscode/package/extension.js"
      ],
      "env": {
        "SERVER_PATH": "${workspaceRoot}"
      },
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/clients/vscode/package",
        "${workspaceRoot}/tests/documents"
      ]
    },
    {
      "name": "Server",
      "type": "node",
      "request": "attach",
      "port": 6080,
      "protocol": "inspector",
      "cwd": "${workspaceFolder}/packages/server/src/",
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/packages/server/package/server.js",
        "${workspaceRoot}/packages/server/package/server.js.map"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Client", "Server"]
    }
  ]
}
