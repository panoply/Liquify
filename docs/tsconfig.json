{
  "exclude": [
    "node_modules/**",
    "package",
    "test"
  ],
  "include": [
    "src/index.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/types/*"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node"
    ]
  },
  "compilerOptions": {
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types/*"
    ],
    "outDir": "package",
    "target": "ES6",
    "removeComments": true,
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "app": [
        "./src/app/index.js"
      ],
      "components": [
        "./src/app/components/*"
      ]
    }
  }
}
