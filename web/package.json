{
  "name": "@liquify/web",
  "version": "0.1.0",
  "description": "Liquify IDE Website",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "license": "ISC",
  "main": ".eleventy.js",
  "private": true,
  "scripts": {
    "dev": "npm-run-all clean make --parallel styles 11ty rollup",
    "build": "pnpm run clean && pnpm run 11ty:build && pnpm run styles:prop && rollup:prod",
    "11ty": "pnpx eleventy --serve --watch",
    "11ty:build": "pnpx eleventy",
    "rollup": "rollup -c -w",
    "rollup:prod": "rollup -c --environment prod",
    "styles": "sass src/style/stylesheet.scss public/assets/stylesheet.css --watch --load-path=./node_modules/ && postcss ./public/assets/*.css --replace",
    "styles:prod": "sass ./src/style/ public/assets/ && postcss public/assets/*.css --replace",
    "make": "mkdirp ./public && mkdirp ./public/assets && mkdirp ./public/assets",
    "clean": "rimraf public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "extends": "@liquify/eslint-config-ts"
  },
  "dependencies": {
    "@brixtol/cryptographer": "^0.1.2",
    "@liquify/schema-stores": "workspace:^0.1.5",
    "bootstrap": "^5.0.2",
    "countup.js": "^2.0.7",
    "freezeframe": "^5.0.2",
    "mithril": "^2.0.4",
    "stimulus": "^2.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@liquify/eslint-config-ts": "workspace:^1.0.1",
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/aws-lambda": "^8.10.78",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.6",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eslint": "^7.30.0",
    "eslint-plugin-babel": "^5.3.1",
    "light-server": "^2.9.1",
    "mkdirp": "^1.0.4",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.35.2",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-scss": "^3.19.0"
  },
  "repository": {
    "url": "git+https://github.com/panoply/liquify.dev.git"
  },
  "peerDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.2.0",
    "prettier": "^2.0.5",
    "rollup": "^2.15.0",
    "stylelint": "^13.6.0"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify.dev/issues"
  },
  "homepage": "https://github.com/panoply/liquify.dev#readme"
}
