{
  "name": "@liquify/rollup-plugin-globs",
  "version": "0.1.0",
  "description": "Rollup plugins and utilities for working with the Liquify monorepo codebase",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "license": "MIT",
  "main": "./package/index.cjs.js",
  "module": "package/index.es.js",
  "types": "index.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify/master/scripts/rollup"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "tests": "node ./test/require-specs.js",
    "prepack": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --verbose --watch"
  },
  "eslintConfig": {
    "extends": ["@liquify/eslint-config-js"]
  },
  "ava": {
    "babel": true,
    "files": ["test/**/**"],
    "concurrency": 5
  },
  "release": {
    "branches": ["master", "next"]
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@liquify/eslint-config-js": "workspace:^1.0.0",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "ava": "^3.15.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "fs-extra": "^10.0.0",
    "marky": "^1.2.2",
    "minimatch": "^3.0.4",
    "pretty-ms": "^7.0.1"
  }
}
