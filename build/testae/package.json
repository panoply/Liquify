{
  "name": "@liquify/testae",
  "version": "0.0.0",
  "description": "Test utilities and wrappers for Ava that are used by various packages and modules within the Liquify monorepo.",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "license": "MIT",
  "main": "./package/index.cjs.js",
  "module": "./package/index.es.js",
  "types": "index.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "scripts": {
    "watch": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "prebuild": "rollup -i index.js -o package/index.cjs.js -f cjs --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --watch --verbose"
  },
  "ava": {
    "babel": true,
    "files": [
      "test/**/*"
    ],
    "concurrency": 5
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@types/node": "^14.0.5",
    "ava": "^3.8.2",
    "chalk": "^4.0.0",
    "rollup-plugin-terser": "^6.0.1"
  }
}
