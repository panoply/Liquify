{
  "name": "@liquify/rollup-utils",
  "version": "1.0.0",
  "description": "Rollup plugin utilities for working with the Liquify monorepo codebase",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com",
    "url": "https://liquify.dev"
  },
  "license": "MIT",
  "type": "module",
  "types": "package/index.d.ts",
  "main": "package/index.js",
  "module": "package/index.mjs",
  "exports": {
    "require": "./package/index.js",
    "import": "./package/index.mjs"
  },
  "files": [
    "package"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify/master/build/rollup-utils"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
