{
  "name": "@liquify/rollup-config",
  "version": "1.0.0",
  "description": "Shared Rollup configuration interface used within the Liquify monorepo.",
  "keywords": [
    "rollup",
    "rollup-plugin",
    "config"
  ],
  "homepage": "https://github.com/panoply/liquify",
