{%- assign item = section.settings -%}

{%- if section.settings.flush -%}
  {%- assign flush = 'no-gutters flush' -%}
{%- else -%}
  {%- assign flush = 'px-' | append: section.settings.gutter -%}
{%- endif -%}

{%- assign gutter_y = section.settings.gutter | prepend: 'py-' -%}

<style>
.class {
  background-color: {{ section.settings.background }};
}
</style>


{% style %}
  .class {
    width: ;
  }
{% endstyle %}

<div
  class="row justify-content-center {{ flush }} {{ gutter_y }}">
  <div
    class="col {{ section.settings.gutter | prepend: 'pr-' }}">
    <div
      class="content">
      <div
        class="{{- section.settings.type }} d-flex {{ section.settings.align }}"
        style="background-color: rgba(0, 0, 0, {{ section.settings.overlay }});">
        <a
          href="#"></a>
      </div>
      <div
        class="aspect-ratio">
        <img
          class="img-fluid image"
          src="{{- section.settings.right_image | img_url: '' -}}">
      </div>
    </div>
  </div>
  <div
    class="col {{ section.settings.gutter | prepend: 'pl-' }}">
    <div
      class="content">
      <div
        class="{{- section.settings.type }} d-flex {{ align }} justify-content-center"
        style="background-color: rgba(0, 0, 0, {{ section.settings.overlay }});">
        <a
