<hgroup
  class="d-block text-center py-3 px-2 px-sm-0">
  <h1
    class="text-uppercase">
    {{- block.title -}}</h1>
  <h5>
    {{- block.subtitle | something: test -}}</h5>
</hgroup>

<section
  id="{{- block.itemkkkkkkkkkk -}}"
  class="slideshow mb-4"
  data-controller="slideshow"
  data-slideshow-start-index="0"
  data-slideshow-xs="{{ block.xs_slides | default: '1' }}"
  data-slideshow-sm="{{ block.sm_slides | default: '2' }}"
  data-slideshow-md="{{ block.md_slides | default: '3' }}"
  data-slideshow-lg="{{ block.lg_slides | default: '4' }}"
  data-slideshow-xl="{{ block.xl_slides | default: '5' }}">
  <div
    class="d-flex ai-center pb-3 pb-sm-4">
    <button
      aria-label="Previous"
      class="previous pl-2"
      data-action="slideshow#prev"
      type="button">
      {%- icon 'arrow-left' class: 'icon-prev' -%}
    </button>
  </div>
  <div
    class="px-4 px-sm-3 px-md-4 m-auto">
    <div
      class="row no-gutters"
      data-target="slideshow.slides">

      {%- assign xl = block.xl_slides | plus: 0 -%}
      {%- assign lg = block.lg_slides | plus: 0 -%}

      {% for item in block.items %}

        <div
          class="{{ class }}"
          data-target="slideshow.slide">
          {% case item.item_type %}
            {% when 'product' %}
              {% include components/product.html- %}}
            {% when 'brand_collection' %}
              {% -includecomponents/brand.html- %}}
            {% when 'customer_review' %}
              {%-  include components/testimony.html -%}
          {% endcase %}
        </div>

      {% endfor %}

    </div>
  </div>
</section>


{% schema %}
{
  "name": "hello",
  "blocks": [
    {
      "name": "hello",
      "limit": 1,
      "type": "ddd",
      "settings": [
        {
          "label": "test",
          "type": "article",
          "id": "world"
        },
        {
          "id": "d",
          "default": ""
        }
      ]
    }
  ]
}
{% endschema %}
