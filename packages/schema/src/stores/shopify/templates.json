{
  "title": "JSON Schema for Shopify JSON Template",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "required": ["order", "name", "sections"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the template sections"
    },
    "sections": {
      "type": "object",
      "additionalProperties": true,
      "description": "Presets which belong the theme"
    },
    "order": {
      "type": "array",
      "description": "The order of the sections",
      "items": {
        "type": "string"
      }
    }
  }
}
