{
  "name": "@liquify/liquid-language-specs",
  "version": "0.1.2",
  "private": false,
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com"
  },
  "contributors": [
    {
      "name": "Joseph Curtis",
      "email": "joecurt85@gmail.com"
    }
  ],
  "license": "SEE LICENSE IN LICENSE.txt",
  "description": "Liquid language variation specification references used by Liquify",
  "types": "./package/index.d.ts",
  "main": "./package/index.js",
  "exports": {
    "require": "./package/index.js",
    "import": "./package/index.js"
  },
  "engines": {
    "pnpm": ">=4",
    "node": ">=12"
  },
  "homepage": "https://liquify.dev",
  "repository": {
    "url": "https://github.com/panoply/liquify"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "html": "node ./scripts/html:generate.js",
    "package": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava ./test/dev.test.mjs --watch --verbose --color",
    "test:cases": "ava ./test/cases/* --verbose --color"
  },
  "ava": {
    "concurrency": 5
  },
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package/**"
    ],
    "extends": [
      "@liquify/eslint-config"
    ],
    "rules": {
      "no-template-curly-in-string": "off",
      "no-unused-vars": "off",
      "no-control-regex": "off",
      "prefer-const": "off"
    }
  },
  "devDependencies": {
    "@vscode/web-custom-data": "^0.3.8",
    "ava": "^4.1.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-types": "^3.16.0"
  }
}
