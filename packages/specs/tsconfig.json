{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package/**", "test"],
  "include": ["src/index.ts", "src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "incremental": false,
    "declaration": true,
    "declarationDir": "package/types",
    "emitDeclarationOnly": true,
    "outDir": "package",
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "exports/*": ["src/exports/*"],
      "html/*": ["./src/html/*"],
      "liquid/*": ["./src/liquid/*"],
      "shared/*": ["src/shared/*"]
    }
  }
}
