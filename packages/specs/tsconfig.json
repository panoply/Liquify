{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/index.ts", "src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "typeRoots": ["src/liquid/types/*", "src/html/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "outDir": "package",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "shared": ["./src/shared/*"],
      "utils": ["./src/utils/*"],
      "html": ["./src/html/*"],
      "liquid": ["./src/liquid/*"]
    }
  }
}
