{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package/**", "test"],
  "include": ["src/index.ts", "src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "incremental": false,
    "declaration": true,
    "target": "ES6",
    "declarationDir": "package/types",
    "emitDeclarationOnly": true,
    "outDir": "package",
    "removeComments": false,
    "baseUrl": "."
  }
}
