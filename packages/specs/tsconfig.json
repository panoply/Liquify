{
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/index.ts", "src/**/*.ts"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  },
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "src",
    "incremental": true,
    "typeRoots": ["src/liquid/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "outDir": "package",
    "target": "ES6",
    "removeComments": true,
    "lib": ["es2020"],
    "module": "ESNext",
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "html": ["./src/html/*"],
      "liquid": ["./src/liquid/*"]
    }
  }
}
