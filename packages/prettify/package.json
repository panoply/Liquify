{
  "name": "@liquify/prettify",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ <nicos@gmx.com>",
  "description": "🩸 Liquid Language beautification support for multiple languages.",
  "engines": {
    "pnpm": ">=4",
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/liquify.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/liquify/issues"
  },
  "main": "./package/index.js",
  "module": "./package/index.mjs",
  "types": "package/@types/export.d.ts",
  "exports": {
    "require": "./package/index.js",
    "import": "./package/index.mjs"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava test/dev.test.mjs --color --verbose --watch",
    "test:cases": "ava ./test/cases/* --verbose --color --watch"
  },
  "eslintConfig": {
    "extends": [
      "@liquify/eslint-config-ts"
    ],
    "rules": {
      "no-unmodified-loop-condition": "off"
    }
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/**/*.test.mjs"
    ],
    "concurrency": 5
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@liquify/eslint-config-ts": "workspace:^1.0.1",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.1",
    "@liquify/tsconfig": "workspace:^1.0.0",
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "ava": "^4.1.0",
    "esbuild": "^0.14.25",
    "esm": "^3.2.25",
    "rollup": "^2.70.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-filesize": "^9.1.2",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "ava": "^3.15.0",
    "rollup": "^2.53.3"
  },
  "dependencies": {
    "prettier": "^2.5.1"
  }
}
