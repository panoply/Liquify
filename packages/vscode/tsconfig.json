{
  "exclude": ["node_modules", "package", "test"],
  "include": ["./client/index.ts", "./client/**/*.ts"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  },
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "client",
    "typeRoots": ["node_modules/@types", "client/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "outDir": "package",
    "target": "ES6",
    "removeComments": true,
    "lib": ["es2020"],
    "module": "ESNext",
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./client/*"],
      "provide": ["./client/provide/*"]
    }
  }
}
