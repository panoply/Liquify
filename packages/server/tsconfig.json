{
  "exclude": ["node_modules", "package"],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "vscode-languageserver",
      "languageserver-textdocument",
      "node",
      "@liquify/liquid-parser",
      "@types/lodash"
    ]
  },
  "compilerOptions": {
    "types": ["node"],
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "checkJs": true,
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "enums": ["./src/enums/*"],
      "provide": ["./src/provide/*"],
      "service": ["./src/service/*"],
      "utils": ["./src/utils/*"]
    }
  }
}
