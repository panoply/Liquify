{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/**/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "outDir": "package",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "vendors": ["./package/vendors/*"],
      "types": ["./src/types/*"],
      "service": ["./src/provide/service/*"],
      "provide": ["./src/provide/*"],
      "modes": ["./src/modes/*"]
    }
  }
}
