{
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/index.ts", "src/**/*.ts", "src/types/*"],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "vscode-languageserver",
      "languageserver-textdocument",
      "node",
      "@liquify/liquid-parser",
      "@types/lodash"
    ]
  },
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "outDir": "package",
    "target": "ES6",
    "removeComments": true,
    "lib": ["es2020"],
    "module": "ESNext",
    "alwaysStrict": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "skipDefaultLibCheck": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "service": ["./src/service/*"],
      "provider": ["./src/provider/*"],
      "mode": ["./src/provider/mode/*"]
    }
  }
}
