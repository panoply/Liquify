{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/**/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2016",
    "incremental": false,
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "declaration": true,
    "declarationDir": "package/types",
    "outDir": "package",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "export": ["./src/export.ts"],
      "types/*": ["./src/types/*"],
      "service/*": ["./src/provide/service/*"],
      "provide/*": ["./src/provide/*"],
      "modes/*": ["./src/modes/*"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
