{
  "name": "@liquify/liquid-language-server",
  "version": "0.1.0",
  "description": "Language Server for the Liquid Templating Language",
  "homepage": "https://liquify.dev",
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com"
  },
  "repository": {
    "url": "https://github.com/panoply/liquify"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --color --watch"
  },
  "private": false,
  "license": "see LICENSE",
  "main": "package/server.js",
  "types": "./package/@types/index.d.ts",
  "exports": {
    "require": "./package/server.js",
    "import": "./package/server.es.js"
  },
  "bundledDependencies": [
    "@liquify/liquid-language-specs",
    "@liquify/liquid-parser",
    "@liquify/prettify",
    "@liquify/schema-stores",
    "vscode-css-languageservice",
    "vscode-json-languageservice",
    "vscode-languageserver",
    "vscode-languageserver-textdocument",
    "vscode-languageserver-types",
    "vscode-uri"
  ],
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "extends": "@liquify/eslint-config",
    "ignorePatterns": [
      "package/**"
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/parsing/parser.js"
    ],
    "concurrency": 5
  },
  "dependencies": {
    "@liquify/liquid-language-specs": "workspace:*",
    "@liquify/liquid-parser": "workspace:*",
    "@liquify/prettify": "workspace:*",
    "@liquify/schema-stores": "workspace:*",
    "@vscode/emmet-helper": "^2.8.4",
    "indent-string": "^5.0.0",
    "lodash": "^4.17.21",
    "strip-json-comments": "^4.0.0",
    "vscode-css-languageservice": "^5.1.13",
    "vscode-json-languageservice": "^4.2.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4",
    "vscode-uri": "^3.0.3"
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/rollup-config": "workspace:*",
    "@liquify/tsconfig": "workspace:*",
    "@liquify/types": "workspace:*",
    "@types/lodash": "^4.14.179",
    "ava": "^4.1.0",
    "dotenv": "^16.0.0",
    "marky": "^1.2.4",
    "pretty-ms": "^7.0.1",
    "vscode-languageserver-types": "^3.16.0"
  },
  "optionalDependencies": {
    "esbuild": "^0.14.26",
    "eslint": "^8.11.0",
    "esm": "^3.2.25",
    "rollup": "^2.70.1",
    "typescript": "^4.6.2"
  }
}
