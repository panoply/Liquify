{
  "$schema": "./../schema/stores/liquid-grammas.json",
  "package": [
    {
      "name": "shopify",
      "type": "variation",
      "export": "liquid-shopify.tmLanguage",
      "extend": "standard",
      "formats": ["json", "yaml"],
      "grammar": {
        "name": "Liquid Shopify",
        "scopeName": "source.liquid.shopify",
        "include": {
          "tags": ["imports"],
          "embeds": ["embedded"]
        }
      }
    },
    {
      "name": "11ty",
      "type": "variation",
      "export": "liquid-11ty.tmLanguage",
      "extend": "standard",
      "formats": ["json", "yaml"],
      "grammar": {
        "name": "Liquid 11ty",
        "scopeName": "source.liquid.11ty",
        "include": {
          "tags": ["imports"],
          "frontmatter": ["frontmatter"]
        }
      }
    },
    {
      "name": "jekyll",
      "type": "variation",
      "export": "liquid-jekyll.tmLanguage",
      "extend": "standard",
      "formats": ["json", "yaml"],
      "grammar": {
        "name": "Liquid Jekyll",
        "scopeName": "source.liquid.jekyll",
        "include": {
          "tags": ["imports", "rouge"],
          "frontmatter": ["frontmatter"]
        }
      }
    },
    {
      "type": "injection",
      "import": "comments",
      "export": "liquify-comment.inject",
      "formats": ["json"],
      "grammar": {
        "scopeName": "source.liquid.comments",
        "injectionSelector": ["L:comment.block.liquid"]
      }
    },
    {
      "type": "injection",
      "import": "markdown",
      "export": "liquid-markdown.codeblock",
      "formats": ["json"],
      "grammar": {
        "scopeName": "markdown.liquid.codeblock",
        "injectionSelector": ["L:text.html.markdown"]
      }
    },
    {
      "type": "injection",
      "import": "injection",
      "export": "liquid.injection",
      "formats": ["json"],
      "grammar": {
        "scopeName": "source.liquid.injection",
        "injectionSelector": [
          "L:source.css -comment -string -meta.embedded",
          "L:source.js -string.quoted.*.js -comment -string -meta.embedded",
          "L:source.jsx -comment -string -string.quoted.*.jsx",
          "L:source.js.jsx -comment -string",
          "L:source.ts -string -comment -string.quoted.*.ts",
          "L:source.json -string -comment -meta.embedded",
          "R:text.html.markdown -comment"
        ]
      }
    }
  ]
}
