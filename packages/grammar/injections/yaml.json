{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.liquid.injection",
  "fileTypes": [
    ".js.liquid",
    ".css.liquid",
    ".scss.liquid",
    ".sass.liquid",
    ".json.liquid"
  ],
  "injectionSelector": "L:source.yaml -comment -string -meta.embedded",
  "patterns": [
    {
      "include": "source.liquid#comments"
    },
    {
      "include": "source.liquid#template-tags"
    },
    {
      "include": "source.liquid#template-vars"
    },
    {
      "include": "source.liquid.embedded#frontmatter"
    }
  ]
}
