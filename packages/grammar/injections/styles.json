{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.liquid.injection",
  "fileTypes": [".css.liquid", ".scss.liquid", ".sass.liquid"],
  "injectionSelector": "L:source.css -comment -string -meta.embedded",
  "patterns": [
    {
      "include": "source.liquid#comments"
    },
    {
      "include": "source.liquid#template-tags"
    },
    {
      "include": "source.liquid#template-vars"
    },
    {
      "include": "source.liquid.embedded#frontmatter"
    }
  ]
}
