{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Liquid",
  "injectionSelector": "L:source.liquid -meta.embedded -comment",
  "scopeName": "source.liquid.embedded",
  "patterns": [
    {
      "include": "#frontmatter"
    },
    {
      "include": "#schema"
    },
    {
      "include": "#javascript"
    },
    {
      "include": "#style"
    },
    {
      "include": "#stylesheet"
    },
    {
      "include": "#stylesheet-scss"
    }
  ],
  "repository": {
    "frontmatter": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.frontmatter.liquid",
      "begin": "^-{3}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.begin.liquid"
        }
      },
      "end": "-{3}$",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
    "schema": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.schema.liquid",
      "begin": "({%)\\s+(schema)\\s+(%})",
      "beginCaptures": {
        "0": {
          "name": "meta.tag.metadata.json.start.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "end": "({%)\\s+(endschema)\\s+(%})",
      "endCaptures": {
        "0": {
          "name": "meta.tag.metadata.json.end.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    "style": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.style.liquid",
      "begin": "({%)\\s+(style)\\s+(%})",
      "beginCaptures": {
        "0": {
          "name": "meta.tag.metadata.style.start.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "end": "({%)\\s+(endstyle)\\s+(%})",
      "endCaptures": {
        "0": {
          "name": "meta.tag.metadata.style.end.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.css"
        }
      ]
    },
    "stylesheet": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.stylesheet.liquid",
      "begin": "({%)\\s+(stylesheet)\\s+(%})",
      "beginCaptures": {
        "0": {
          "name": "meta.tag.metadata.stylesheet.scss.start.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "end": "({%)\\s+(endstylesheet)\\s+(%})",
      "endCaptures": {
        "0": {
          "name": "meta.tag.metadata.stylesheet.end.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.css"
        }
      ]
    },
    "stylesheet-scss": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.stylesheet.scss.liquid",
      "begin": "({%)\\s+(stylesheet)\\s+('(scss)')\\s+(%})",
      "beginCaptures": {
        "0": {
          "name": "meta.tag.metadata.stylesheet.scss.start.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "string.quoted.single.liquid"
        },
        "4": {
          "name": "meta.attribute.type.liquid"
        },
        "5": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "end": "({%)\\s+(endstylesheet)\\s+(%})",
      "endCaptures": {
        "0": {
          "name": "meta.tag.metadata.stylesheet.scss.end.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.css.scss"
        }
      ]
    },
    "javascript": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.javascript.liquid",
      "begin": "({%)\\s+(javascript)\\s+(%})",
      "beginCaptures": {
        "0": {
          "name": "meta.tag.metadata.javascript.start.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "end": "({%)\\s+(endjavascript)\\s+(%})",
      "endCaptures": {
        "0": {
          "name": "meta.tag.metadata.javascript.end.liquid"
        },
        "1": {
          "name": "punctuation.definition.tag.begin.liquid"
        },
        "2": {
          "name": "entity.name.tag.liquid"
        },
        "3": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    }
  }
}
