{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "src",
    "removeComments": false,
    "incremental": false,
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "declaration": true,
    "declarationDir": "package/types",
    "outDir": "package",
    "baseUrl": "."
  }
}
