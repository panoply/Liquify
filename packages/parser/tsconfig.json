{
  "extends": "@liquify/tsconfig",
  "exclude": ["node_modules/**", "package", "test"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "src",
    "incremental": true,
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "declaration": true,
    "declarationDir": "package/@types",
    "preserveConstEnums": false,
    "outDir": "package",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "parser": ["./src/parser/*"],
      "lexical": ["./src/lexical/*"],
      "tree": ["./src/lexical/tree/*"]
    }
  }
}
