{
  "name": "@liquify/liquid-parser",
  "version": "0.0.0",
  "description": "An incremental parser for the Liquid Templating Language",
  "scripts": {
    "ts:build": "tsc --project tsconfig.json --removeComments",
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "rollup": "rollup -c",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --color --verbose --watch",
    "perf": "node -r esm test/perf/parsing.js"
  },
  "private": false,
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "owner": "SISSEL SAAS",
  "license": "see LICENSE.txt",
  "main": "./package/index.js",
  "types": "./package/@types/index.d.ts",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": "../../.eslintrc.json",
    "rules": {
      "semi": ["error", "always"]
    }
  },
  "ava": {
    "require": ["esm"],
    "babel": {
      "testOptions": {
        "babelrc": true,
        "configFile": false
      }
    },
    "files": ["test/index.js"],
    "concurrency": 5
  },
  "dependencies": {
    "@liquify/liquid-language-specs": "workspace:^0.1.2",
    "@mvasilkov/outdent": "^1.0.5",
    "ansi-colors": "^4.1.1",
    "line-column": "^1.0.2",
    "lodash": "^4.17.21",
    "mergerino": "^0.4.0",
    "nanoid": "^3.1.23",
    "rambda": "^6.7.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "yamljs": "^0.3.0"
  },
  "repository": {
    "url": "https://github.com/panoply/liquid-parser"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.16",
    "@liquify/rollup-plugin-globs": "workspace:^0.0.0",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.0",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "ava": "^3.15.0",
    "babel-plugin-const-enum": "^1.0.1",
    "babel-preset-const-enum": "^1.0.0",
    "chalk": "^4.1.1",
    "dotenv": "^9.0.2",
    "esm": "^3.2.25",
    "pretty-hrtime": "^1.0.3",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "vscode-languageserver-types": "^3.16.0"
  }
}
