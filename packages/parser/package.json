{
  "name": "@liquify/liquid-parser",
  "version": "0.1.1-beta.1",
  "description": "An incremental parser for the Liquid Templating Language",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "package": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava test/* --watch --verbose",
    "test:cases": "ava test/cases/**/* --verbose --color"
  },
  "private": false,
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com"
  },
  "license": "see LICENSE.txt",
  "main": "package/parser.js",
  "module": "packages/parser.mjs",
  "exports": {
    "require": "./package/parser.js",
    "import": "./package/parser.mjs"
  },
  "bin": "",
  "types": "@liquify/types/parser/index.d.ts",
  "prettier": "@liquify/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package/*"
    ],
    "extends": [
      "@liquify/eslint-config"
    ],
    "rules": {
      "no-use-before-define": "off",
      "no-control-regex": "off"
    }
  },
  "ava": {
    "concurrency": 5,
    "require": [
      "esm"
    ]
  },
  "dependencies": {
    "@liquify/liquid-language-specs": "workspace:^0.1.2",
    "lodash.inrange": "^3.3.6",
    "vscode-languageserver-textdocument": "^1.0.4",
    "yamljs": "^0.3.0"
  },
  "repository": {
    "url": "https://github.com/panoply/liquid-parser"
  },
  "devDependencies": {
    "@liquify/eslint-config": "workspace:*",
    "@liquify/prettier-config": "workspace:*",
    "@liquify/rollup-config": "workspace:*",
    "@liquify/tsconfig": "workspace:*",
    "@liquify/types": "workspace:*",
    "@types/lodash.inrange": "^3.3.6",
    "ava": "3.15.0",
    "chalk": "4.1.1",
    "esm": "^3.2.25",
    "json-stringify-safe": "^5.0.1",
    "pretty-hrtime": "^1.0.3",
    "rollup": "^2.70.1",
    "typescript": "^4.6.2",
    "vscode-languageserver-types": "^3.16.0"
  }
}
