{
  "name": "@liquify/liquid-parser",
  "version": "0.1.1-beta.1",
  "description": "An incremental parser for the Liquid Templating Language",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "package": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava ./test/* --watch --verbose --color",
    "test:cases": "ava ./test/cases/**/* --verbose --color"
  },
  "private": false,
  "author": {
    "name": "Νίκος Σαβίδης",
    "email": "n.savvidis@gmx.com"
  },
  "license": "see LICENSE.txt",
  "main": "package/parser.js",
  "types": "./package/@types/index.d.ts",
  "exports": {
    "require": "./package/parser.js"
  },
  "eslintConfig": {
    "extends": ["@liquify/eslint-config-ts"],
    "rules": {
      "no-use-before-define": "off",
      "no-control-regex": "off"
    }
  },
  "ava": {
    "require": ["esm"],
    "concurrency": 5
  },
  "dependencies": {
    "@liquify/liquid-language-specs": "workspace:^0.1.2",
    "lodash.inrange": "^3.3.6",
    "vscode-languageserver-textdocument": "^1.0.1",
    "yamljs": "^0.3.0"
  },
  "repository": {
    "url": "https://github.com/panoply/liquid-parser"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@liquify/eslint-config-ts": "workspace:^1.0.1",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.1",
    "@liquify/tsconfig": "workspace:^1.0.0",
    "@rollup/plugin-alias": "^3.1.4",
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/lodash.inrange": "^3.3.6",
    "ava": "^3.15.0",
    "chalk": "^4.1.1",
    "esm": "^3.2.25",
    "json-stringify-safe": "^5.0.1",
    "pretty-hrtime": "^1.0.3",
    "rollup": "^2.53.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5",
    "vscode-languageserver-types": "^3.16.0"
  },
  "peerDependencies": {
    "rollup": "^2.51.1",
    "typescript": "^4.3.2"
  }
}
