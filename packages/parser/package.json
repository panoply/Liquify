{
  "name": "@liquify/liquid-parser",
  "version": "0.0.0",
  "description": "An incremental parser for the Liquid Templating Language",
  "scripts": {
    "ts:build": "tsc --project tsconfig.json --removeComments",
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "rollup": "rollup -c",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "test": "ava --color --verbose --watch",
    "perf": "node -r esm test/perf/parsing.js"
  },
  "private": false,
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "owner": "SISSEL SAAS",
  "license": "see LICENSE.txt",
  "main": "./package/index.js",
  "types": "./package/@types/index.d.ts",
  "eslintConfig": {
    "extends": [
      "@liquify/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": {
      "testOptions": {
        "babelrc": true,
        "configFile": false
      }
    },
    "files": [
      "test/index.js"
    ],
    "concurrency": 5
  },
  "dependencies": {
    "@liquify/liquid-language-specs": "workspace:^0.1.2",
    "@mvasilkov/outdent": "^1.0.5",
    "lodash": "^4.17.21",
    "vscode-languageserver-textdocument": "^1.0.1",
    "yamljs": "^0.3.0"
  },
  "repository": {
    "url": "https://github.com/panoply/liquid-parser"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@liquify/eslint-config-ts": "workspace:^1.0.0",
    "@liquify/rollup-plugin-globs": "workspace:^0.1.0",
    "@liquify/rollup-plugin-utils": "workspace:^0.1.0",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "ava": "^3.15.0",
    "chalk": "^4.1.1",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "pretty-hrtime": "^1.0.3",
    "rollup-plugin-filesize": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "vscode-languageserver-types": "^3.16.0"
  }
}
