{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Liquid",
  "injectionSelector": "L:source.liquid -meta.embedded -comment",
  "scopeName": "source.liquid.frontmatter",
  "patterns": [
    {
      "include": "#frontmatter"
    },
    {
      "include": "#frontmatter-js"
    }
  ],
  "repository": {
    "frontmatter": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.frontmatter.liquid",
      "begin": "^-{3}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.begin.liquid"
        }
      },
      "end": "-{3}$",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
    "frontmatter-js": {
      "name": "meta.embedded.block.liquid",
      "contentName": "meta.embedded.block.frontmatter.liquid",
      "begin": "-{3}\\b(js|javascript)\\b",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.begin.liquid"
        }
      },
      "end": "-{3}",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.liquid"
        }
      },
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    }
  }
}
