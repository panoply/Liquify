{
  "exclude": ["node_modules/**", "!node_modules/ava"],
  "include": [
    "build/path-resolve",
    "build/rollup",
    "packages",
    "scripts",
    "server",
    "specs",
    "web"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  }
}
