{
  "exclude": ["node_modules/**"],
  "include": ["cli", "packages", "scripts", "server", "specs", "web"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  }
}
