{
  "exclude": ["node_modules/**"],
  "include": [
    "build/rollup",
    "packages",
    "scripts",
    "server",
    "specs",
    "web",
    "cli"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  }
}
