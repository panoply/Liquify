{
  "name": "liquify-vscode",
  "version": "0.0.1",
  "displayName": "Liquify",
  "description": "Syntax highlighting, intellisense, diagnostics, formatting and support for the Liquid template language support.",
  "publisher": "sissel",
  "icon": "assets/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "preview": false,
  "private": false,
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "liquid",
    "shopify",
    "jekyll",
    "language",
    "lsp",
    "formatting",
    "completions",
    "codelens",
    "validations",
    "linting"
  ],
  "categories": [
    "Formatters",
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "main": "./index.js",
  "engines": {
    "vscode": "^1.33.0"
  },
  "scripts": {
    "cli": "liquify",
    "dev": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd ..",
    "postinstall": "liquify build -c -o package/syntaxes"
  },
  "activationEvents": [
    "onLanguage:liquid",
    "onLanguage:liquid-11ty",
    "onLanguage:liquid-jekyll",
    "onLanguage:liquid-shopify",
    "workspaceContains:**/.liquidrc",
    "workspaceContains:**/.liquidrc.json"
  ],
  "extensionDependencies": [
    "vscode.html-language-features"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": ".liquidrc",
        "url": "./schema/rcfile.json"
      }
    ],
    "commands": [
      {
        "command": "liquid.releaseNotes",
        "title": "Liquid: Release Notes"
      },
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.toggleOutput",
        "title": "Liquid: Toggle Output"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format Document"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      },
      {
        "command": "liquid.toggleLiquid",
        "title": "Liquid: Activate Liquid"
      },
      {
        "command": "liquid.liquidrc",
        "title": "Liquid: Generate a .liquidrc rule file"
      }
    ],
    "keybindings": [
      {
        "command": "liquid.formatDocument",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "liquid",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid"
        ],
        "extensions": [
          ".liquid"
        ]
      },
      {
        "id": "liquid-shopify",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid Shopify"
        ],
        "extensions": [
          ".liquid"
        ]
      },
      {
        "id": "liquid-jekyll",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid Jekyll"
        ],
        "extensions": [
          ".jekyll"
        ]
      },
      {
        "id": "liquid-11ty",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid 11ty"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js.liquid"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css.liquid"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss.liquid",
          ".sass.liquid"
        ]
      },
      {
        "id": "json",
        "extensions": [
          ".json.liquid"
        ]
      },
      {
        "id": "jsonc",
        "filenames": [
          ".liquidrc",
          ".liquidrc.json"
        ]
      }
    ],
    "grammars": [
      {
        "language": "liquid",
        "scopeName": "source.liquid",
        "path": "./syntaxes/liquid.tmLanguage.json"
      },
      {
        "language": "liquid-shopify",
        "scopeName": "source.liquid.shopify",
        "path": "./syntaxes/liquid-shopify.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript.liquid": "javascript",
          "meta.embedded.block.schema.liquid": "json",
          "meta.embedded.block.stylesheet.liquid": "css",
          "meta.embedded.block.style.liquid": "css",
          "meta.embedded.block.stylesheet.scss.liquid": "scss"
        }
      },
      {
        "language": "liquid-jekyll",
        "scopeName": "source.liquid.jekyll",
        "path": "./syntaxes/liquid-jekyll.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.frontmatter.liquid": "yaml"
        }
      },
      {
        "language": "liquid-11ty",
        "scopeName": "source.liquid.11ty",
        "path": "./syntaxes/liquid-11ty.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.frontmatter.liquid": "yaml"
        }
      },
      {
        "scopeName": "source.liquid.comments",
        "path": "./syntaxes/liquify-comment.inject.json",
        "injectTo": [
          "source.liquid",
          "source.liquid.shopify",
          "source.liquid.jekyll",
          "source.liquid.11ty"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.json.liquid": "json"
        }
      },
      {
        "scopeName": "markdown.liquid.codeblock",
        "path": "./syntaxes/markdown.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.liquid": "liquid"
        }
      },
      {
        "scopeName": "source.liquid.injection",
        "path": "./syntaxes/grammar/injection.json",
        "injectTo": [
          "source.js",
          "source.json",
          "source.css",
          "source.css.scss"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid configuration",
      "properties": {
        "liquid.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "liquid.releaseNotes": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show version update notifications"
        },
        "liquid.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable the completion intellisense feature."
        },
        "liquid.hover.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable hover tooltip tag descriptions."
        },
        "liquid.validate.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable the Liquid code validation feature."
        },
        "liquid.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.format": {
          "deprecationMessage": "DEPRECATED!\nUse \"liquid.format.enable\" instead."
        },
        "liquid.formatting": {
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc file or if you really must, you can use the \"liquid.format.*\" workspace setting where the asterix (*) is replace by either a \"html\", \"javascript\", \"css\", \"scss\" or \"json\" value."
        },
        "liquid.rules": {
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc file or if you really must, you can use the \"liquid.format.*\" workspace setting where the asterix (*) is replace by either a \"html\", \"javascript\", \"css\", \"scss\" or \"json\" value."
        },
        "liquid.formatIgnore": {
          "deprecationMessage": "DEPRECATED!\nDefine ignore tags in the \"liquid.format.html\": { \"tags\": [] } property ruleset and set the \"kind\" value to \"ignore\""
        },
        "liquid.beautify": {
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc file or use the \"liquid.format.*\" workspace setting."
        }
      }
    }
  },
  "bundledDependencies": [
    "liquid-language-server",
    "vscode-languageclient"
  ],
  "dependencies": {
    "liquid-language-server": "workspace:^0.0.0",
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@liquify/cli": "^0.0.1"
  },
  "peerDependencies": {
    "@liquify/cli": "workspace:^0.0.1"
  }
}
