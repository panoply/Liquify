{
  "name": "liquify-vscode",
  "version": "0.0.1",
  "displayName": "Liquify",
  "description": "Syntax highlighting, intellisense, diagnostics, formatting and support for the Liquid template language support.",
  "publisher": "sissel",
  "icon": "assets/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "preview": false,
  "private": false,
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "liquid",
    "shopify",
    "jekyll",
    "language",
    "lsp",
    "formatting",
    "completions",
    "codelens",
    "validations",
    "linting"
  ],
  "categories": [
    "Formatters",
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-liquid.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-liquid/issues"
  },
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.33.0"
  },
  "scripts": {
    "watch": "rollup -c -w",
    "build": "rollup -c --environment prod",
    "pack": "cd versions; pnpm pack ../ && cd .."
  },
  "activationEvents": [
    "onLanguage:liquid",
    "onLanguage:liquid-11ty",
    "onLanguage:liquid-jekyll",
    "onLanguage:liquid-shopify",
    "workspaceContains:**/.liquidrc",
    "workspaceContains:**/.liquidrc.json"
  ],
  "extensionDependencies": [
    "vscode.html-language-features"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Potion Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/potion-color-theme.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".liquidrc",
        "url": "./schema/rcfile.json"
      }
    ],
    "commands": [
      {
        "command": "liquid.releaseNotes",
        "title": "Liquid: Release Notes"
      },
      {
        "command": "liquid.disableFormatting",
        "title": "Liquid: Disable Formatting"
      },
      {
        "command": "liquid.enableFormatting",
        "title": "Liquid: Enable Formatting"
      },
      {
        "command": "liquid.toggleOutput",
        "title": "Liquid: Toggle Output"
      },
      {
        "command": "liquid.formatDocument",
        "title": "Liquid: Format Document"
      },
      {
        "command": "liquid.formatSelection",
        "title": "Liquid: Format Selection"
      },
      {
        "command": "liquid.toggleLiquid",
        "title": "Liquid: Activate Liquid"
      },
      {
        "command": "liquid.liquidrc",
        "title": "Liquid: Generate a .liquidrc rule file"
      }
    ],
    "keybindings": [
      {
        "command": "liquid.formatDocument",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "liquid",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid"
        ],
        "extensions": [
          ".liquid"
        ]
      },
      {
        "id": "liquid-shopify",
        "configuration": "./language-configuration.json",
        "aliases": [
          "Liquid Shopify"
        ],
        "extensions": [
          ".liquid"
        ]
      },
      {
        "id": "liquid-jekyll",
        "configuration": "./language-configuration.json",
        "firstLine": "---",
        "aliases": [
          "Liquid Jekyll"
        ],
        "extensions": [
          ".liquid",
          ".jekyll"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js.liquid"
        ]
      },
      {
        "id": "css",
        "extensions": [
          ".css.liquid"
        ]
      },
      {
        "id": "scss",
        "extensions": [
          ".scss.liquid",
          ".sass.liquid"
        ]
      },
      {
        "id": "json",
        "extensions": [
          ".json.liquid"
        ]
      },
      {
        "id": "jsonc",
        "filenames": [
          ".liquidrc",
          ".liquidrc.json"
        ]
      }
    ],
    "grammars": [
      {
        "language": "liquid",
        "scopeName": "source.liquid",
        "path": "./syntaxes/liquid.tmLanguage.json"
      },
      {
        "language": "liquid-shopify",
        "scopeName": "source.liquid.shopify",
        "path": "./syntaxes/liquid-shopify.tmLanguage.json"
      },
      {
        "language": "liquid-jekyll",
        "scopeName": "source.liquid.jekyll",
        "path": "./syntaxes/liquid-jekyll.tmLanguage.json"
      },
      {
        "scopeName": "source.liquid.frontmatter",
        "path": "./syntaxes/injections/frontmatter.json",
        "injectTo": [
          "source.liquid.jekyll"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.frontmatter.liquid": "yaml"
        }
      },
      {
        "scopeName": "markdown.liquid.codeblock",
        "path": "./syntaxes/injections/liquid-markdown.codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.liquid": "liquid"
        }
      },
      {
        "scopeName": "source.liquid.embedded",
        "path": "./syntaxes/injections/embedded.inject.json",
        "injectTo": [
          "source.liquid.shopify"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.javascript.liquid": "javascript",
          "meta.embedded.block.schema.liquid": "json",
          "meta.embedded.block.stylesheet.liquid": "css",
          "meta.embedded.block.style.liquid": "css",
          "meta.embedded.block.stylesheet.scss.liquid": "scss"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Liquid configuration",
      "properties": {
        "liquid.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "liquid.notifier.releases": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show version update notifications"
        },
        "liquid.notifier.recommendations": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show recommendation notifications. This provides and show tips when using the extension."
        },
        "liquid.notifier.conflicts": {
          "type": "boolean",
          "default": true,
          "description": "Whether to notify you of conflicting extensions. Helps prevent issues from occuring."
        },
        "liquid.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable the completion intellisense feature."
        },
        "liquid.hover.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable hover tooltip tag descriptions."
        },
        "liquid.validate.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable the Liquid code validation feature."
        },
        "liquid.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Liquid formatting."
        },
        "liquid.formatting": {
          "default": false,
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc.json file or if you really must, you can use the \"liquid.format.*\" workspace setting where the asterix (*) is replaced by one of the following:\n\n- \"html\"\n- \"javascript\"\n- \"css\"\n- \"scss\"\n- \"json\"\n\nNote: If \"liquid.format.enable\" is set to \"false\" all formatting will be disabled."
        },
        "liquid.rules": {
          "default": false,
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc.json file or if you really must, you can use the \"liquid.format.*\" workspace setting where the asterix (*) is replaced by one of the following:\n\n- \"html\"\n- \"javascript\"\n- \"css\"\n- \"scss\"\n- \"json\"\n\nNote: If \"liquid.format.enable\" is set to \"false\" all formatting will be disabled."
        },
        "liquid.formatIgnore": {
          "default": false,
          "deprecationMessage": "DEPRECATED!\nDefine ignore tags in the \"liquid.format.html\": { \"tags\": [] } property ruleset and set the \"kind\" value to \"ignore\""
        },
        "liquid.beautify": {
          "default": false,
          "deprecationMessage": "DEPRECATED!\nDefine beautification formatting rules using a .liquidrc.json file or use the \"liquid.format.*\" workspace setting."
        }
      }
    }
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "strip-json-comments": "^3.1.0",
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@liquify/rollup-plugin-globs": "workspace:^0.0.0",
    "@liquify/rollup-plugin-utils": "workspace:^0.0.0"
  }
}
